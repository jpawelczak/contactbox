<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}CreateMore - your tasks{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('bundles/contactbox/css/bootstrap.min.css') }}">
    <link href="{{ asset('bundles/contactbox/css/cover.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/contactbox/css/jumbotron-narrow.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/contactbox/css/signin.css') }}" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/contactbox/css/sweetalert.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav masthead-nav">
                {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                {% else %}
                    <li><a href="{{ path('contactbox_contact_newcontact') }}"><span class="glyphicon glyphicon-plus-sign"
                                             aria-hidden="true"></span></a></li>
                    <li role="presentation"><a href="{{ path('contactbox_contact_showallcontacts') }}">All contacts</a></li>
                    <li role="presentation"><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>
                    <li role="presentation"><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                {% endif %}
            </ul>
        </nav>
        <h3 class="masthead-brand">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                Welcome {{ app.user.username }}!
                {% else %}
               ContactBox
            {% endif %}
        </h3>
    </div>
        {% block content %}



        {% endblock %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <nav>
        <ul class="nav masthead-nav">
            <li role="presentation"><a href="{{ path('contactbox_contact_showallcontacts') }}">All contacts</a></li>
            <li role="presentation"><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
        </ul>
    </nav>
    {% endif %}
    <footer class="mastfoot">
        <p>&copy; <a href=https://pl.linkedin.com/in/jpawelczak">Jakub Pawelczak</a></p>
    </footer>
</div>
<script src="{{ asset('bundles/contactbox/js/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/contactbox/js/bootstrap.min.js') }}"
        integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
        crossorigin="anonymous"></script>
<script src="{{ asset('bundles/contactbox/js/jquery_events_click_on_one_off.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/contactbox/js/sweetalert.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/contactbox/js/delete_alert.js') }}" type="text/javascript"></script>
</body>
</html>

</body>
</html>
